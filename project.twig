{% include '_header.twig' %}
<article class="project">
  <div class="project-title-bar">
    <div class="container">
      <h1>{{ project.project_name }}</h1>
    </div>
  </div>
  <div class="container" role="content">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-8"></div>
      <div class="pure-u-1 pure-u-md-3-4">
          <p class="summary">{{ project.summary }}</p>

          <img class="team-image" src="{{ image(project.team_photo) }}" />

          <h2>By {{ project.team_name }} for {{ project.client }}</h2>

          <h3>The Team</h3>
          {{ project.team_description }}

          <h3>The Project</h3>
          {{ project.description }}
      </div>
    </div>
  </div>
</article>
<!-- End Main Content and Sidebar -->
{% include '_footer.twig' %}
