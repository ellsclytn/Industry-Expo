{% include '_header.twig' %}
  {% if record is defined %}
    {% set home = record %}
    <section class="masthead">
      <div class="container">
        <div class="flex-container">
          <div class="flex-item message">
            <h1>{{ app.config.get('general/payoff') }}</h1>
          </div>
          <div class="flex-item button">
            <h2>{{ home.templatefields.about_intro }}</h2>
            <i class="fa fa-angle-down arrow-down"></i>
          </div>
        </div>
      </div>
    </section>

    <a id="#about" name="about"></a>
    <section class="about">
      <div class="container">
        <h2>{{ home.templatefields.about_intro }}</h2>
        {{ home.templatefields.about }}
      </div>
    </section>

    <section class="event-details">
      <div class="container">
        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-3">
            <i class="fa fa-users details-icon"></i>
            <h3>{{ home.templatefields.who_coming_title }}</h3>
            {{ home.templatefields.who_coming }}
          </div>
          <div class="pure-u-1 pure-u-md-1-3">
            <i class="fa fa-star details-icon"></i>
            <h3>{{ home.templatefields.benefits_title }}</h3>
            {{ home.templatefields.benefits }}
          </div>
          <div class="pure-u-1 pure-u-md-1-3">
            <i class="fa fa-calendar details-icon"></i>
            <h3>{{ home.templatefields.date_time_title }}</h3>
            {{ home.templatefields.date_time }}
          </div>
        </div>
      </div>
    </section>

    <section class="view-projects">
      <div class="container">
        {#!-- TODO: Find path function to do this without hard coding #}
        <a class="button button-projects" href="/projects">{{ home.templatefields.view_projects }}</a>
      </div>
    </section>


    <section class="location">
      <div class="container">
        <h2>{{ home.templatefields.location_title }}</h2>
        {{ home.templatefields.location_description }}

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2">
            <h3>{{ home.templatefields.event_location_title }}</h3>
            {{ home.templatefields.event_location }}
          </div>
          <div class="pure-u-1 pure-u-md-1-2">
            <h3>{{ home.templatefields.campus_info_title }}</h3>
            {{ home.templatefields.campus_info }}
          </div>
        </div>

        <div class="pure-g">
          <div class="pure-u-1 pure-u-md-1-2">
            <h3>{{ home.templatefields.parking_title }}</h3>
            {{ home.templatefields.parking }}
          </div>
          <div class="pure-u-1 pure-u-md-1-2">
            <h3>{{ home.templatefields.more_info_title }}</h3>
            {{ home.templatefields.more_info }}
          </div>
        </div>
      </div>
    </section>

    <section class="map">
      <div id="map-canvas"></div>
      <div class="address">
        <div class="container">
          <p>{{ home.templatefields.address }}</p>
        </div>
      </div>
    </section>

    <section class="contact">
      <div class="container">
        <div class="pure-g">
          {# Offset col #}
          <div class="pure-u-1 pure-u-md-1-4"></div>
          <div class="pure-u-1 pure-u-md-6-8">
            <h2>{{ home.templatefields.contact_title }}</h2>
            {{ home.templatefields.contact_description }}
          </div>
        </div>
      </div>
    </section>


  {% else %}
    <p>
      {{ __('Content for home not found!') }}
      {{ __("You should set 'homepage:' in your 'app/config/config.yml' to an existing record.") }}
    </p>
  {% endif %}
{% include '_footer.twig' %}
