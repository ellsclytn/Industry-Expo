{% include '_header.twig' %}
  {% if record is defined %}
    {% set home = record %}
    <section class="masthead">
      <div class="section-centered">
        <div class="container">

          <div class="pure-g">
            <div class="pure-u-1 pure-u-md-2-3">
              <h2>Showcasing the work of final year ICT students.</h2>
            </div>
            <div class="pure-u-1 pure-u-md-1-3">
              <a href="#about" title="What is this about?">
                <h3>What's this about?
                  <br>
                  <i class="fa fa-chevron-down"></i>
                </h3>
              </a>
            </div>
          </div>

        </div>
      </div>
    </section>

    <div class="teaser">
      <h1>{{ home.teaser }}</h1>
      <p>{{ home.templatefields.about_intro }}</p>
    </div>


    <div>
      <h1>{{ home.templatefields.about_intro }}</h1>
      <p>{{ home.templatefields.about }}</p>
    </div>
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3">
        <h1>{{ home.templatefields.who_coming_title }}</h1>
        <p>{{ home.templatefields.who_coming }}</p>
      </div>
      <div class="pure-u-1 pure-u-md-1-3">
        <h1>{{ home.templatefields.benefits_title }}</h1>
        <p>{{ home.templatefields.benefits }}</p>
      </div>
      <div class="pure-u-1 pure-u-md-1-3">
        <h1>{{ home.templatefields.date_time_title }}</h1>
        <p>{{ home.templatefields.date_time }}</p>
      </div>
    </div>
    <div class="projects">
      <button>{{ home.templatefields.view_projects }}</button>
    </div>
    <div class="location">
      <h1>{{ home.templatefields.location_title }}</h1>
      <p>{{ home.templatefields.location_description }}</p>
      <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-2">
          <h2>{{ home.templatefields.campus_info_title }}</h2>
          <p>{{ home.templatefields.campus_info }}</p>
        </div>
        <div class="pure-u-1 pure-u-md-1-2">
          <h2>{{ home.templatefields.parking_title }}</h2>
          <p>{{ home.templatefields.parking }}</p>
        </div>
      </div>
      <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-2">
          <h2>{{ home.templatefields.more_info_title }}</h2>
          <p>{{ home.templatefields.more_info }}</p>
        </div>
      </div>
    </div>
    <div class="map">
      <div class="address">
        <p>{{ home.templatefields.address }}</p>
      </div>
    </div>
    <div class="contact">
      <h1>{{ home.templatefields.contact_title }}</h1>
      <p>{{ home.templatefields.contact_description }}</p>
    </div>
  {% else %}
    <p>
      {{ __('Content for home not found!') }}
      {{ __("You should set 'homepage:' in your 'app/config/config.yml' to an existing record.") }}
    </p>
  {% endif %}
{% include '_footer.twig' %}
